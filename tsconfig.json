{
    "compilerOptions": {

        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "noEmit": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,

        "plugins": [
            {
                "name": "next"
            }
        ],

        "typeRoots": [

            "./src/types",
            "./node_modules/@types"
        ],

        "paths": {

            "@/src/*": ["./src/*"],
            "@/app/*": ["./src/app/*"],
            "@/langs/*": ["./src/langs/*"],
            "@/libs/*": ["./src/libs/*"],
            "@/components/*": ["./src/components/*"],
            "@/styles/*": ["./src/styles/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/stores/*": ["./src/stores/*"],
            "@/assets/*": ["./src/assets/*"]
        }
    },

    "include": [

        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "public/.next/types/**/*.ts"
    ],

    "exclude": [

        "node_modules"
    ]
}
